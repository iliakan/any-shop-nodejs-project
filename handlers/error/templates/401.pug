extends /layouts/main

block append variables
  - let headTitle = error.title || 'Требуется авторизация'
  - let layout_header_class = "main__header_center"

block content
  +b.error
    +e('h1').type= headTitle
    +e.code 401
    +e.text
      if error.description
        != error.description
      else
        | Возможно, вам нужно войти в сайт?
